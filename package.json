{
  "name": "memory-kv-store",
  "version": "2.0.1",
  "description": "A simple in-memory key/value store.",
  "main": "dist/index.js",
  "metapak": {
    "data": {
      "files": "src/*.js",
      "testsFiles": "src/*.mocha.js",
      "ignore": [
        "dist"
      ]
    },
    "configs": [
      "readme",
      "mocha",
      "eslint",
      "travis",
      "codeclimate",
      "babel",
      "jsdocs",
      "jsarch"
    ]
  },
  "scripts": {
    "architecture": "jsarch src/*.js > ARCHITECTURE.md",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "cli": "env NODE_ENV=${NODE_ENV:-cli}",
    "compile": "babel src --out-dir=dist",
    "cover": "nyc npm test && nyc report --reporter=text",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls && rm -rf ./coverage",
    "cz": "env NODE_ENV=${NODE_ENV:-cli} git cz",
    "doc": "echo \"# API\" > API.md; jsdoc2md src/*.js >> API.md",
    "lint": "eslint src/*.js",
    "metapak": "metapak",
    "mocha": "mocha --compilers js:@babel/register src/*.mocha.js",
    "prettier": "prettier --write src/*.js",
    "preversion": "npm t && npm run lint && npm run metapak -s && npm run compile",
    "test": "npm run mocha",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nfroidure/memory-kv-store.git"
  },
  "author": "Nicolas Froidure",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nfroidure/memory-kv-store/issues"
  },
  "homepage": "https://github.com/nfroidure/memory-kv-store#readme",
  "dependencies": {
    "knifecycle": "^2.5.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^9.0.0",
    "commitizen": "^2.10.1",
    "common-services": "^3.0.1",
    "conventional-changelog-cli": "^2.0.5",
    "coveralls": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.6.0",
    "eslint-plugin-prettier": "^2.6.2",
    "jsarch": "^1.3.0",
    "jsdoc-to-markdown": "^4.0.1",
    "metapak": "^1.0.3",
    "metapak-nfroidure": "^6.3.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "prettier": "^1.14.2",
    "sinon": "^6.3.3"
  },
  "engines": {
    "node": ">=6.9.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "greenkeeper": {
    "ignore": [
      "commitizen",
      "cz-conventional-changelog",
      "conventional-changelog-cli",
      "mocha",
      "coveralls",
      "nyc",
      "eslint",
      "eslint-config-prettier",
      "prettier",
      "jsdoc-to-markdown",
      "jsarch"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "6.9.5"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ]
  }
}
